<% provide(:title, "基本情報の更新") %>
<% provide(:class_text, "basic-info") %>
<% provide(:button_text, "編集") %>

<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
      <%= render "shared/error_messages", object: @user %>

      <%= f.label :work_time, "指定勤務時間", class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :work_time, class: "form-control" %>

      <%= f.label :basic_time, "基本勤務時間", class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :basic_time, class: "form-control" %>

      <%= f.submit yield(:button_text), class: "col-md-12 btn btn-primary btn-#{yield(:class_text)}" %>

    <% end %>
  </div>
</div>
